# Celery worker environment example
# Copy to .env and adjust as needed

# --------------------
# PostgreSQL
# --------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_todo_db
POSTGRES_USER=ai_todo_user
POSTGRES_PASSWORD=ai_todo_password

# --------------------
# Redis (broker/result backend)
# --------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# --------------------
# Weaviate
# --------------------
WEAVIATE_HOST=weaviate
WEAVIATE_PORT=8080
WEAVIATE_SCHEME=http

# --------------------
# OpenAI-compatible provider (e.g., SiliconFlow)
# Used by Weaviate text2vec-openai / generative-openai
# --------------------
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.siliconflow.cn/v1
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_MODEL_VERSION=
OPENAI_EMBEDDING_TYPE=text

# --------------------
# Optional: Logging
# --------------------
PYTHONUNBUFFERED=1
